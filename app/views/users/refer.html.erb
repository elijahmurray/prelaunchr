<!-- Header -->
<div class="header">
  <div class="content">
    <div class="header-content">
      <a href="https://habit.com" target="_blank"><div class="habit-logo"></div></a>
    </div>
    <div class="header-content">
      <p>Thank you for signing up!</p>
    </div>
  </div>
</div>
<!-- Hero -->
<div class="hero">
  <div class="page-content clearfix">
    <!-- <div class=""> -->
      <div class="hero-headline-wrapper">
        <h1>Share Habit,<br>Get Rewarded</h1>
        <p style="width:428px">Share your unique promo code <%= @user.referral_code %> and the link below via email, Facebook or Twitter and earn a $25 Amazon eGift Card* for each friend who purchases a Habit kit.</p>
      </div>
    <!-- </div> -->
      <div class="share-wrapper">
<!--         <p>Share your unique link via email, Facebook<br>or Twitter and earn an Amazon eGift Card<br>each friend who purchases a Habit kit.</p> -->
        <div class="copy-link-wrapper">
          <div class="copy-link">
            <span><%= referral_link(@user.referral_code) %></span>
          </div>
          <% twitter_message = "#Shaving is evolving. Excited for @harrys to launch." %>
          <div class="social-links">
            <%= social_share_button_tag(@facebook_share_message,
                                        :url => referral_link(@user.referral_code),
                                        :desc => @facebook_share_message,
                                        :image => image_url('refer/social.jpg'),
                                        :'data-twitter-title' => @twitter_share_message,
                                        :'data-facebook-title' => @facebook_share_message,
                                        :'data-source' => image_url('refer/social.jpg'),
                                        :'data-caption' => image_url('refer/social.jpg'),
            ) %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%
  referrals_count = @user.referrals.count

  stops = User::REFERRAL_STEPS

  found = nil

  stops.reverse_each { |stop|
    if stop["count"] <= referrals_count and !found
      stop["selected"] = true
      found = stop
    else
      stop["selected"] = false
    end
  }
%>

<!-- Prizes -->
<div class="prizes <% if found %>prize-<%= found["class"] %><% end %>">
  <div class="page-content">
    <h2>How It Works</h2>

    <div class="progress-wrapper">
      <ul class="clearfix">
        <li class="title">
          <div class="prize-data">
            <p>FRIENDS PURCHASED</p>
          </div>
          <div class="progress-bottom prize-data">
            <p> &#36;&#36; RECIEVED</p>
          </div>
        </li>

        <% stops.each do |stop| %>
          <li class="product  <% if stop["selected"] %>selected<% end %> <% if stop["class"] == 'five' %>last<% end %>">
            <div class="prize-data">
              <div class="circle"><%= stop["count_label"] %></div>
            </div>
            <div class="progress-bottom prize-data">
              <p><%= stop["html"].html_safe %></p>
            </div>
          </li>
        <% end %>
      </ul>

      <div class="progress">
        <div class="mover">
          <div class="bar clearfix"></div>
        </div>
      </div>

    </div>

    <%
      words = ''
      if referrals_count == 1
        words = 'friend has'
      else
        words = 'friends have'
      end
    %>

    <div class="count-wrapper">
      <% if referrals_count == 0 %>
        <p>No friends have purchased Habit.</p>
      <% else %>
        <p><%= referrals_count %> <%= words %> joined!</p>
      <% end %>
      <p class="check">Keep checking</p>
    </div>

    <div class="terms">
      <p>Need more details? <%= link_to "Terms and Conditions", page_path('terms'), {:style => 'text-decoration: underline'} %></p>
    </div>

    <div class="amazon-footer" >
      <p>
        <%= I18n.t('amazon_policies.section_1') %>
      </p>
      <p>
        <%= I18n.t('amazon_policies.section_2') %>
      </p>
    </div>

  </div>
</div>
