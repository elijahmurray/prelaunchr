<!-- Header -->
<div class="header">
  <div class="content">
    <div class="header-content">
      <a href="https://habit.com" target="_blank"><div class="habit-logo"></div></a>
    </div>
    <div class="header-content">
      <p>Thank you for signing up!</p>
    </div>
  </div>
</div>
<!-- Hero -->
<div class="hero">
  <div class="page-content clearfix">
    <div class="hero-headline-wrapper">
      <h1>Share Habit,<br>Get Rewarded</h1>
      <div class="share-wrapper">
        <p>Share your unique link via email, Facebook<br>or Twitter and earn an Amazon eGift Card<br>each friend who purchases a Habit kit.</p>
        <div class="copy-link">
          <span><%= root_url %>?ref=<%= @user.referral_code %></span>
        </div>

        <% twitter_message = "#Shaving is evolving. Excited for @harrys to launch." %>

        <div class="social-links">
          <a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&title=Harrys" class="fb" target="_blank"></a>
          <div class="sep"></div>
          <a href="http://twitter.com/share?url=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&text=<%= CGI::escape(twitter_message) %>" class="twit" target="_blank"></a>
        </div>
      </div>
    </div>
  </div>
</div>

<%
  referrals_count = @user.referrals.count

  stops = User::REFERRAL_STEPS

  found = nil

  stops.reverse_each { |stop|
    if stop["count"] <= referrals_count and !found
      stop["selected"] = true
      found = stop
    else
      stop["selected"] = false
    end
  }
%>

<!-- Prizes -->
<div class="prizes <% if found %>prize-<%= found["class"] %><% end %>">
  <div class="page-content">
    <h2>How It Works</h2>

    <ul class="clearfix">

      <li class="title">
        <p class="progress-top">Friends Purchased</p>
        <p class="progress-bottom"> &#36;&#36; Recieved</p>
      </li>

      <% stops.each do |stop| %>
        <li class="product  <% if stop["selected"] %>selected<% end %> <% if stop["class"] == 'five' %>last<% end %>">
          <div class="circle"><%= stop["count"] %></div>
          <!-- <div class="sep"></div> -->
          <p><%= stop["html"].html_safe %></p>
        </li>
      <% end %>
    </ul>

    <div class="progress">
      <div class="mover">
        <div class="bar clearfix"></div>
      </div>
    </div>

    <%
      words = ''
      if referrals_count == 1
        words = 'friend has'
      else
        words = 'friends have'
      end
    %>

    <% if referrals_count == 0 %>
      <p class="place "><span>No</span> friends have purchased Habit.</p>
    <% else %>
      <p class="place "><span><%= referrals_count %></span> <%= words %> joined!</p>
    <% end %>
    <p class="check">Keep checking</p>

  </div>
</div>
